@using lab15.ViewModels
@model DeviceViewModel

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        
        <dt class="col-sm-2">
            Manufacturer
        </dt>
        <dd class="col-sm-10">
            @Model.Manufacturer
        </dd>
        
        <dt class="col-sm-2">
            Seller
        </dt>
        <dd class="col-sm-10">
            @Model.Seller
        </dd>
        
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
    </dl>
    <div class="container">
        <h3>Description</h3>
        <p class="text-black">
            @Model.Description
        </p>
    </div>
    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
