@using lab15.ViewModels
@model PurchaseViewModel

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceView.Name
        </dd>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceView.Price
        </dd>

        <dt class="col-sm-2">
            Manufacturer
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceView.Manufacturer
        </dd>

        <dt class="col-sm-2">
            Seller
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceView.Seller
        </dd>

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceView.Category
        </dd>
    </dl>
    <div class="container">
        <h3>Description</h3>
        <p class="text-black">
            @Model.DeviceView.Description
        </p>
    </div>
    <div>
        
        <form method="post" asp-action="Buy">
            <input type="hidden" asp-for="DeviceId" />
            <div class="form-group">
                <label asp-for="UserName">UserName</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <input type="submit" value="Confirm" class="btn btn-primary" />
            <br />
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
    
</div>

