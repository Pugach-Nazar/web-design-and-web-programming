@model Seller

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
    @if(Model.Devices.Count > 0)
    {
        <form method="post" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <h3 class="text-danger">cannot delete a seller, still has the goods</h3>
            <input type="submit" disabled value="Delete" class="btn btn-danger" />
            <br />
            <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <br />
        <a asp-action="Index">Back to List</a>
        </form>
    }
</div>
