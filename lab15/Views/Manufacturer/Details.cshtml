@using lab15.ViewModels
@model ManufacturerViewModel

<h2>Details</h2>
<div>
    <h4>Manufacturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
    </dl>
    <h3>@("Other products of the " + Model.Name)</h3>
    @if (Model.DevicesView == null)
    {
        <h3>This manufacturer has no products</h3>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Seller
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DevicesView)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Seller
                        </td>
                        <td>
                            @item.Category
                        </td>
                        <td>
                            @item.Description
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
</div>
<div>
    <a asp-controller="Device" asp-action="Index">Back to List</a>
</div>

