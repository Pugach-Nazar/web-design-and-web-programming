@model List<Manufacturer>

<a asp-action="Create">Create new</a>
<h2>Manufacturer list</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Country
            </th>
            <th>
                More
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Country
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Other products</a>
                </td>
            </tr>
        }
    </tbody>
</table>
